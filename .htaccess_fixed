<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Admin Panel - Route to Laravel backend
    RewriteRule ^admin(.*)$ api/index.php [L]
    
    # API v1 Routes - Route to Laravel backend  
    RewriteRule ^api/v1/(.*)$ api/index.php [L]
    
    # React Frontend - Serve index.html for all other routes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.html [L]
</IfModule>
