<IfModule mod_rewrite.c>
  DirectoryIndex index.php index.html
  RewriteEngine On

  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^ - [L]

  RewriteRule ^ index.php [L]
</IfModule>
